{
  "name": "utaha",
  "version": "0.2.1",
  "description": "Some common util methods. (e.g Array/String/Date handler, Type Judgement and Debounce/Throttle)",
  "main": "dist/main.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npx jest",
    "coverage": "npx jest --coverage",
    "build": "webpack",
    "commit": "git add . && git-cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged && npm run coverage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kagashino/utaha.git"
  },
  "author": "kagashino",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.13.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.3",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "files": [
    "dist",
    "src",
    "test"
  ],
  "jest": {
    "testMatch": [
      "**/test/*.js"
    ],
    "bail": true,
    "verbose": true,
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  },
  "lint-staged": {
    "linters": {
      "src/*.js": [
        "./node_modules/.bin/eslint --fix",
        "git add ."
      ],
      "test/*.js": [
        "./node_modules/.bin/eslint --fix",
        "git add ."
      ]
    }
  }
}
